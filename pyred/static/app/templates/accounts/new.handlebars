<section>
    <h1>Add Account</h1>
    <form class="form-horizontal" {{action save content on="submit"}}>
        <fieldset>
            <legend>Registration Details</legend>
            <div class="control-group">
                <label class="control-label" {{bindAttr for="firstNameField.elementId"}}>First Name</label>
                <div class="controls">
                    {{view Ember.TextField type="text" required="true" valueBinding="firstName" name="first_name" viewName="firstNameField"}}
                    <span class="help-block">Enter first name</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" {{bindAttr for="lastNameField.elementId"}}>Last Name</label>
                <div class="controls">
                    {{view Ember.TextField type="text" required="true" valueBinding="lastName" name="last_name" viewName="lastNameField"}}
                    <span class="help-block">Enter last name</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" {{bindAttr for="emailField.elementId"}}>Email</label>
                <div class="controls">
                    {{view Ember.TextField type="text" required="true" valueBinding="email" name="email" viewName="emailField"}}
                    <span class="help-block">Enter email address</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" {{bindAttr for="newPasswordField.elementId"}}>Password</label>
                <div class="controls">
                    {{view Ember.TextField type="password" required="true" valueBinding="newPassword" name="new_password" viewName="newPasswordField"}}
                    <span class="help-block">Enter a password</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" {{bindAttr for="validatePasswordField"}}>Validate password</label>
                <div class="controls">
                    {{view Ember.TextField type="password" required="true" valueBinding="validatePassword" name="validate_password" viewName="validatePasswordField"}}
                    <span class="help-block">Please enter the same password again</span>
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </fieldset>
    </form>
</section>
